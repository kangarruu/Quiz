<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="main_enter_button_style">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin_bottom</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button</item>

    </style>

    <style name="main_enter_button_land_style">
        <item name="android:layout_width">@dimen/main_button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:layout_marginBottom">@dimen/main_button_margin_bottom_land</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/button</item>

    </style>


    <style name="question_border_style">
        <item name= "android:layout_width">match_parent</item>
        <item name= "android:layout_height">3dp</item>
        <item name= "android:background">#313131</item>
    </style>

    <style name="question_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/question_background</item>
        <item name="android:padding">@dimen/question_padding</item>
        <item name="android:textColor">@color/question_text_color</item>
        <item name="android:textSize">@dimen/question_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="answers_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/answer_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/answer_margin_bottom</item>
        <item name="android:layout_marginLeft">@dimen/answer_margin_left</item>
        <item name="android:layout_marginRight">@dimen/answer_margin_right</item>
        <item name="android:padding">@dimen/answer_padding_left</item>
        <item name="android:buttonTint">@color/answer_button_tint</item>
        <item name="android:textColor">@color/answer_text_color</item>
        <item name="android:textSize">@dimen/answer_text_size</item>
        <item name="android:background">@color/answer_background</item>

</style>
</resources>
